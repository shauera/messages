      "get": {
        "description": "Returns a list of all available messages",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "tags": [
          "messages"
        ],
        "operationId": "listMessages",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/MessageResponses"
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
